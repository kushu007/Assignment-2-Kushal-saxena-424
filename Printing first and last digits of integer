#include <stdio.h>
#include <math.h>
 
int main()
{
  	int Number, First_Digit, Count, Last_Digit;
 
  	printf("Enter any Number that you wish: \n");
  	scanf("%d", & Number);
  	
  	Count = log10(Number); 	
  	First_Digit = Number / pow(10, Count);
  	
  	Last_Digit = Number % 10;
	    
	printf("The First Digit of a Given Number %d =  %d", Number, First_Digit);
	printf("\nThe Last Digit of a Given Number %d =  %d", Number, Last_Digit);
 
  	return 0;
}
